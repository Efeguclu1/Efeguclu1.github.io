---
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
  {
    name: "Cloud-Native E-Commerce Platform on GCP",
    date: "May 2025",
    summary:
      "Migrated a MERN e-commerce app to a cloud-native architecture on Google Cloud.",
    highlights: [
      "Microservices on GKE; serverless components on Cloud Run",
      "Infrastructure as Code with Terraform",
      "Load testing and scalability monitoring with Locust",
    ],
    stack: ["GCP", "GKE", "Cloud Run", "Terraform", "Locust", "MERN"],
  },
  {
    name: "Online Store Web Application",
    date: "May 2025",
    summary:
      "Full-stack containerized e-commerce application built with agile SCRUM practices.",
    highlights: [
      "Authentication, product reviews, order tracking",
      "Secure data handling and encryption considerations",
      "Containerized deployment with Docker and Kubernetes",
    ],
    stack: ["Node.js", "React", "Docker", "Kubernetes"],
  },
  {
    name: "Stance Detection (VAST Dataset)",
    date: "Dec 2024",
    summary:
      "Stance detection using ML and transformer-based models with added topic context.",
    highlights: [
      "Experimented with BERT and RoBERTa baselines",
      "Incorporated Wikipedia topic context to improve stance accuracy",
      "Focused on evaluation and iteration rather than a single model run",
    ],
    stack: ["Python", "Transformers", "BERT", "RoBERTa"],
  },
];
---

<BaseLayout
  title="Efe Güçlü — Projects"
  description="Selected projects in security, Linux, cloud, and machine learning."
>
  <div class="page">
    <h1>Projects</h1>
    <p class="desc">
      A selection of course and engineering projects. Focus on clear problems, practical implementation, and measurable validation.
    </p>

    <div class="grid">
      {projects.map((p) => (
        <section class="card">
          <div class="card-header">
            <h2>{p.name}</h2>
            <span class="date">{p.date}</span>
          </div>
          <p class="summary">{p.summary}</p>

          <ul>
            {p.highlights.map((h) => <li>{h}</li>)}
          </ul>

          <div class="stack">
            {p.stack.map((s) => <span class="tag">{s}</span>)}
          </div>
        </section>
      ))}
    </div>
  </div>

  <style>
    .page {
      padding: 20px 0;
    }

    h1 {
      margin-bottom: 12px;
    }

    .desc {
      color: var(--color-text-muted);
      margin-bottom: 32px;
      max-width: 600px;
    }

    .grid {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .card {
      border: 1px solid var(--color-border);
      border-radius: 6px;
      padding: 24px;
      background: var(--color-bg-card);
      transition: border-color var(--transition-fast);
    }

    .card:hover {
      border-color: var(--color-border-hover);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 16px;
      margin-bottom: 12px;
    }

    h2 {
      font-size: 1rem;
      color: var(--color-accent);
      margin: 0;
    }

    .date {
      color: var(--color-text-subtle);
      font-size: 0.85rem;
      white-space: nowrap;
    }

    .summary {
      color: var(--color-text);
      line-height: 1.7;
      margin-bottom: 16px;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0 0 20px;
    }

    li {
      color: var(--color-text-muted);
      padding: 4px 0;
      padding-left: 16px;
      position: relative;
    }

    li::before {
      content: ">";
      position: absolute;
      left: 0;
      color: var(--color-accent);
    }

    .stack {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      padding-top: 16px;
      border-top: 1px solid var(--color-border);
    }

    .tag {
      background: var(--color-bg-subtle);
      color: var(--color-text-muted);
      padding: 4px 10px;
      font-size: 0.85rem;
      border: 1px solid var(--color-border);
    }

    @media (max-width: 600px) {
      .card-header {
        flex-direction: column;
        gap: 4px;
      }
      .card {
        padding: 18px;
      }
    }
  </style>
</BaseLayout>
