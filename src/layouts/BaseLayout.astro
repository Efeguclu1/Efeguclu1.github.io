---
const {
  title = "Efe Güçlü",
  description = "Personal website of Efe Güçlü",
} = Astro.props;

const nav = [
  { href: "/", label: "Home" },
  { href: "/cv", label: "CV" },
  { href: "/projects", label: "Projects" },
  { href: "/blog", label: "Blog" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-P51K4GPK7K"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-P51K4GPK7K');
    </script>
  </head>

  <body>
    <header class="container">
      <a class="brand" href="/">Efe Güçlü</a>
      <nav class="nav">
        {nav.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="container footer">
      <small>© {new Date().getFullYear()} Efe Güçlü. All rights reserved.</small>
    </footer>

    <style>
      :global(:root) {
        --color-text: #1a1a1a;
        --color-text-muted: #6b7280;
        --color-text-subtle: #9ca3af;
        --color-accent: #2563eb;
        --color-accent-hover: #1d4ed8;
        --color-border: #e5e7eb;
        --color-border-hover: #d1d5db;
        --color-bg: #ffffff;
        --color-bg-subtle: #f9fafb;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        --transition-fast: 0.15s ease;
        --transition-normal: 0.2s ease;
      }
      :global(body) {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
        -webkit-font-smoothing: antialiased;
      }
      :global(a) {
        color: var(--color-accent);
        text-decoration: none;
        transition: color var(--transition-fast);
      }
      :global(a:hover) {
        color: var(--color-accent-hover);
      }
      :global(::selection) {
        background: var(--color-accent);
        color: white;
      }
      .container { max-width: 980px; margin: 0 auto; padding: 20px; }
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 16px;
      }
      .brand {
        font-weight: 700;
        text-decoration: none;
        color: var(--color-text);
        transition: opacity var(--transition-fast);
      }
      .brand:hover {
        opacity: 0.7;
      }
      .nav { display: flex; gap: 20px; }
      .nav a {
        text-decoration: none;
        color: var(--color-text-muted);
        font-weight: 500;
        position: relative;
        padding: 4px 0;
        transition: color var(--transition-fast);
      }
      .nav a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-accent);
        transition: width var(--transition-normal);
      }
      .nav a:hover {
        color: var(--color-text);
      }
      .nav a:hover::after {
        width: 100%;
      }
      .footer {
        border-top: 1px solid var(--color-border);
        color: var(--color-text-subtle);
        margin-top: 40px;
      }
    </style>
  </body>
</html>
